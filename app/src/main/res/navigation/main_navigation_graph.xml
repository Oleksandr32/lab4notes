<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_navigation_graph"
	app:startDestination="@id/signInFragment">

	<fragment
		android:id="@+id/signInFragment"
		android:name="com.oleksandrlysun.lab4notes.presentation.screens.signin.SignInFragment"
		android:label="Sing in"
		tools:layout="@layout/fragment_sign_in">
		<action
			android:id="@+id/action_signInFragment_to_signUpFragment"
			app:destination="@id/signUpFragment" />
	</fragment>

	<fragment
		android:id="@+id/signUpFragment"
		android:name="com.oleksandrlysun.lab4notes.presentation.screens.signup.SignUpFragment"
		android:label="Sing up"
		tools:layout="@layout/fragment_sign_up" />
</navigation>